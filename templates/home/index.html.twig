                        <div class="mouse">
                            <div class="wheel"></div>
                        </div>
                    </div></div>
            </div>
        </div>
    </div>
    </a>

    {% for label, messages in app.flashes  %}
        <div class="alert mb-5 alert-{{ label }} fade show display-6 text-center" role="alert" data-mdb-color="{{ label }}">
            {% for message in messages %}
                {{ message }}
