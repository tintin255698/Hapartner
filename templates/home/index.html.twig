    <section class="localisation">
        <h2 class="text-center">{% trans %}Nous trouver{% endtrans %}</h2>
        <div class="container" >
            <div class="row">
                <div class="col-lg-4 border-end text-center border-light disp mt-4" >
                    <i class="fa-solid bx fa-location-dot"></i>
                    <p class="text-center mt-2">10 rue du Luxembourg <br> 25000 Besançon </p>
                </div>
                <div class="col-lg-4 border-end text-center border-light disp mt-4">
                    <i class="fa-solid bx fa-phone"></i>
                    <a href="tel:0651539693" class="mt-3">0651539693</a>
                </div>
                <div class="col-lg-4 text-center border-light disp mt-4">
                    <i class="fa-solid fa-envelope"></i>
                    <p class="mt-3">contact@hapartners.fr</p>
                </div>
            </div>
        </div>
        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d2709.7128814913135!2d5.965511317443848!3d47.222200000000015!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sfr!4v1660001996655!5m2!1sen!2sfr" width="100%" height="250px" style="border:0; margin-top: 20px" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
